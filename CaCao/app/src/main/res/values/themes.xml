<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CaCao" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!--
        ActionBar를 Custom 하기위한 Theme 선언하기
    -->
    <style name="Theme.CaCao.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.CaCao.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--
        MainActivity가 실행되면 화면 상단에 자동으로 ActionBar가 나타나는데
        자동으로 나타나는 ActionBar는 Custom 하기가 어려워서
        자동 ActionBar를 감추고, 새로운 ActionBar를 만들어서 사용할 예정이다

        기본 Activity 화면에서 자동으로 나타나는 ActionBar를 감추도록
        Theme를 변경할 것이고
        그때 사용할 Theme를 여기에 지정
    -->
    <style name="Theme.CaCao.NoActionBar">
        <item name="windowActionBar" >false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>